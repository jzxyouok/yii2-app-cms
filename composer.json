{
    "name": "jonneyless/yii2-app-cms",
    "description": "The Content Manage System Project Based Yii Framework",
    "keywords": ["yii2", "framework", "cms", "project template"],
    "homepage": "http://www.ijony.com/",
    "language": "PHP",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jonneyless/yii2-app-cms/issues",
        "wiki": "https://github.com/jonneyless/yii2-app-cms/wiki",
        "source": "https://github.com/jonneyless/yii2-app-cms"
    },
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "jonneyless",
            "email": "jonneyless@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-jui": "*",
        "jonneyless/yii2-wechat": "dev-master",
        "onokumus/metismenu": "*",
        "bower-asset/jquery.cookie": "*",
        "bower-asset/slimscroll": "*",
        "bower-asset/flot": "*",
        "bower-asset/peity": "*",
        "bower-asset/pace": "*",
        "bower-asset/jquery.gritter": "*",
        "bower-asset/bower-jquery-sparkline": "*",
        "bower-asset/chartjs": "*",
        "bower-asset/toastr": "*"
    },
    "require-dev": {
      "yiisoft/yii2-debug": "~2.0.0",
      "yiisoft/yii2-gii": "~2.0.0",
      "yiisoft/yii2-faker": "~2.0.0",

      "codeception/base": "^2.2.3",
      "codeception/verify": "~0.3.1"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
